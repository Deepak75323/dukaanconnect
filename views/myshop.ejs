					<form action="/editabout" method="POST">
						<p><b>About Shop & offers:</b>&emsp;&emsp;<input type="submit" name="click" value="Save"></p>
						<input type="hidden" name="shopname" value="<%=data[0].shopname%>">
					    <input type="hidden" name="pincode" value="<%=data[0].pincode%>">
						<input type="hidden" name="area" value="<%=data[0].area%>">
						<textarea name="newaboutshop" rows="4" ><%=data[0].aboutshop%></textarea>
					</form>
				</section>
                <br>
                <ul class="alt">
                    <p>Live Current customer count: <b><%=data[0].items.length%></b></p>
                </ul>
                <section >
                    <form method="post" action="/reducecount">
                        <div class="3u 6u(small) 12u$(xsmall)">
                            <ul class="actions vertical">
						        <input type="hidden" name="shopname" value="<%=data[0].shopname%>">
				 				<input type="hidden" name="pincode" value="<%=data[0].pincode%>">
				 				<input type="hidden" name="area" value="<%=data[0].area%>">
                                <input id="butt" type="submit" name="clickreduce" value="Reduce Queue Count">
							</ul>
						</div>
					</form>
					<br>
					<ul class="alt">
						<%for(let i=0;i<data[0].items.length;i++){%>
			                <li><p><%=i+1%>. Customer Phone No: <b><%=data[0].phoneNumbers[i]%></b></p></li>
							<div class="field">
								<label for="listofitems">List of items</label>
								<textarea name="listofitems" id="listofitems" rows="1"><%=data[0].items[i]%></textarea>
							</div>
						<%}%>
					</ul>
                </section>
            </div>
        </section>

        <!-- contactus -->
		<section id="contactus">
			<div class="inner">
				<header>
					<h2>CONTACT US<br><br></h2>
				</header>
				<form method="post" action="/contact1">
					<div class="field half first">
						<label for="username">Name</label>
						<input type="text" name="username" id="username" />
					</div>
					<div class="field half">
						<label for="useremail">Email</label>
						<input type="email" name="useremail" id="useremail" />
					</div>
					<div class="field">
						<label for="message">Message</label>
						<textarea name="message" id="message" rows="2"></textarea>
					</div>
					<ul class="actions">
						<li><input  type="submit" value="Send Message" class="alt" /></li>
					</ul>
				</form>
				<div class="copyright">
					&copy; 2022  <span class="icon fa-envelope-o ">Deepakcoder</span>
					<br> Developers: <a href="https://www.github.com/Deepak75323"><span class="icon fa-linkedin"></span> Deepak Mishra</a>.
				</div>
			</div>
		</section>

